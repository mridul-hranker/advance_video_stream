<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/resize_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:drawablePadding="25dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="30dp"
        android:paddingVertical="12dp"
        android:text="Resize Mode"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/playback_speed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:drawablePadding="25dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="30dp"
        android:paddingVertical="12dp"
        android:text="Playback Speed"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/resize_mode"
        app:layout_constraintStart_toStartOf="@+id/resize_mode"
        app:layout_constraintTop_toBottomOf="@+id/resize_mode" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/quality"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:drawablePadding="25dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="30dp"
        android:paddingVertical="12dp"
        android:text="Quality"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/playback_speed"
        app:layout_constraintStart_toStartOf="@+id/playback_speed"
        app:layout_constraintTop_toBottomOf="@+id/playback_speed" />

</androidx.constraintlayout.widget.ConstraintLayout>